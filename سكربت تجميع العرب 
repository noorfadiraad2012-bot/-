-- Iraqi Neon GUI with only AutoPlay Toggle
local Players = game:GetService("Players")
local RS = game:GetService("ReplicatedStorage")
local TS = game:GetService("TweenService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Main GUI
local gui = Instance.new("ScreenGui")
gui.Name = "AutoPlayGUI"
gui.Parent = playerGui

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 250, 0, 100)
mainFrame.Position = UDim2.new(0.5, -125, 0.5, -50)
mainFrame.BackgroundColor3 = Color3.fromRGB(10,10,10)
mainFrame.BackgroundTransparency = 0.2
mainFrame.BorderSizePixel = 2
mainFrame.BorderColor3 = Color3.fromRGB(255,215,0)
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = gui

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0,40)
title.Position = UDim2.new(0,0,0,0)
title.BackgroundTransparency = 1
title.Text = "المطور المجهول"
title.Font = Enum.Font.GothamBold
title.TextSize = 24
title.TextColor3 = Color3.fromRGB(0,255,0)
title.TextStrokeColor3 = Color3.fromRGB(255,0,0)
title.TextStrokeTransparency = 0
title.TextScaled = true
title.Parent = mainFrame

-- Close Button
local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0,40,0,30)
closeBtn.Position = UDim2.new(1, -50, 0, 5)
closeBtn.BackgroundColor3 = Color3.fromRGB(255,0,0)
closeBtn.TextColor3 = Color3.fromRGB(255,255,255)
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 20
closeBtn.Text = "X"
closeBtn.Parent = mainFrame
closeBtn.MouseButton1Click:Connect(function()
	gui:Destroy()
end)

-- AutoPlay Toggle Button
local autoPlay = false
local autoBtn = Instance.new("TextButton")
autoBtn.Size = UDim2.new(0, 200, 0, 50)
autoBtn.Position = UDim2.new(0.5, -100, 0.5, -25)
autoBtn.BackgroundColor3 = Color3.fromRGB(255,140,0)
autoBtn.TextColor3 = Color3.fromRGB(255,255,255)
autoBtn.Font = Enum.Font.GothamBold
autoBtn.TextSize = 20
autoBtn.Text = "تشغيل تلقائي"
autoBtn.Parent = mainFrame

local autoGlow = Instance.new("UIStroke")
autoGlow.Thickness = 2
autoGlow.Color = Color3.fromRGB(255,255,0)
autoGlow.Parent = autoBtn

-- AutoPlay Toggle Function
autoBtn.MouseButton1Click:Connect(function()
	autoPlay = not autoPlay
	autoBtn.Text = autoPlay and "إيقاف التلقائي" or "تشغيل تلقائي"

	if autoPlay then
		task.spawn(function()
			while autoPlay do
				for i = 1, 10 do
					local args = {{EmoteEvent = "Emote"..i}}
					local remoteFolder = RS:WaitForChild("Manager"):WaitForChild("Remotes"):WaitForChild("RemoteEvents")
					local emoteRemote = remoteFolder:WaitForChild("Emote")
					emoteRemote:FireServer(unpack(args))
					task.wait(0.01) -- سرعة 0.01 لكل Emote
					if not autoPlay then break end
				end
			end
		end)
	end
end)